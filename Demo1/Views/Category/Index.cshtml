@model IEnumerable<Demo1.Models.Category>

@{ ViewBag.Title = "Index"; }
<h2>Book list</h2>

@using (Html.BeginForm("Index", "Category", FormMethod.Get))
{
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            Category ID
        </th>
        <th>
            Category Name
        </th>
        <th>
            Category Description
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CategoryID
            </td>
            <td>
                @item.CategoryName
            </td>
            <td>
                @item.CategoryDescription
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID }, new { onclick = "return confirm('Are you sure you wish to delete this book?');" })
            </td>
        </tr>
}

</table>
@Html.ActionLink("New Category", "Create", "Category")